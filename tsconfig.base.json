		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"strict": true,
		"paths": {
			"@kixi-io/ki.kd-typescript": ["libs/core/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
